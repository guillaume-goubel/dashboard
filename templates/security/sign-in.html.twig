{% extends 'base.html.twig' %}

{% block title %} Loggin - {{parent()}} {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/azia.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
{% endblock %}

{% block body %}

<div class="az-signin-wrapper">
	<div class="az-card-signin">
		<h1 class="az-logo"><span>Pro</span>jekt</h1>

		<div class="az-signin-header">
			<h2>Bienvenue</h2>
			<h4>Merci de vous connecter</h4>
			
			{% include 'flash/messageFlash.html.twig' %} 
			
			{# FORM #}
			<form action="{{ path('security_login') }}" method="post">			
				<div class="form-group">
					<label>Email</label>
					<input type="text" name="_username" class="form-control" placeholder="Enter your email">
				</div>

				<div class="form-group">
					<label>Mot de passe</label>
					<input type="password" name="_password" class="form-control" placeholder="Enter your password">
				</div>
				
				{# <input type="hidden" name="_target_path" value="{{ path('account') }}" /> #}
				<button type="submit" class="btn btn-az-primary btn-block">Connection</button>
			</form>
		</div>
		
		<div class="az-signin-footer">
			<p><a href="">Password perdu ?</a></p>
			<p>Vous n'avez pas encore de compte ? <a href="{{ path('security_signUp') }}">Cr√©er un compte</a></p>
		</div>

	</div>
</div>

{% block javascripts %}
    <script src="{{ asset('assets/js/azia.js') }}"></script>
{% endblock %}

{% include 'partials/footer.html.twig' %}

{% endblock %}